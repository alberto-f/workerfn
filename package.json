{
  "name": "workerit",
  "version": "0.0.4",
  "description": "Worker your functions",
  "main": "dist/workerit.js",
  "scripts": {
    "start": "npm run build",
    "build": "rollup index.js --o dist/workerit.js --f umd --name 'Workerit'",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run build && nyc mocha --recursive './specs/*.js' --check-leaks --globals Blob,URL,Worker ",
    "test:debug": "mocha --recursive './specs/*.js' --inspect-brk --check-leaks --globals Blob,URL,Worker ",
    "precommit": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alberto-f/workerit.git"
  },
  "bugs": {
    "url": "https://github.com/alberto-f/workerit/issues"
  },
  "homepage": "https://github.com/alberto-f/workerit/blob/master/README.md",
  "keywords": [
    "webworker",
    "worker"
  ],
  "author": "Alberto Fernandez Reyes",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "husky": "^1.1.2",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "rollup": "^0.66.6",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "dist/"
    ]
  }
}
